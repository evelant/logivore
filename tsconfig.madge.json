{
    "compilerOptions": {
        "noEmit": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@whetware/logivore": [
                "./packages/logivore/build/esm/index.js"
            ],
            "@whetware/logivore/test/*": [
                "./packages/logivore/build/test/*"
            ],
            "@whetware/logivore/examples/*": [
                "./packages/logivore/build/examples/*"
            ],
            "@whetware/logivore/*": [
                "./packages/logivore/build/esm/*"
            ],
        }
    },
    "include": [
        "./packages/logivore/build/esm/**/*.js",
        "./packages/logivore/build/test/**/*.js",
        "./packages/logivore/build/examples/**/*.js"
    ]
}
